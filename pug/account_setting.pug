extends layout.pug
block content
    // ------------- account_setting -------------
    .l_account_title.w1200
        i.fas.fa-user
        span 會員專區

    .l_account_body.w1200
        .l_account_left.col20
            ul
                li
                    a(href="order_list.html") 訂單查詢
                li
                    a(href="like_list.html") 我的收藏
                li
                    a(href="account_setting.html").text-red 帳號設定
                li
                    a(href="login.html") 登出
        .l_account_right.col50
            .l_account_main
                h5 帳號設定
                form.p_laccount_setting_form
                    label(for="name")
                        p 中文全名
                        input(type="text" id="name")
                        .gender
                            label(for="male")
                                input(type="radio",name="gender",value="male",id="male").checkbox
                                span.radiomark
                                    i.fas.fa-circle
                                p 男
                            label(for="female")
                                input(type="radio",name="gender",value="female",id="female").checkbox
                                span.radiomark
                                    i.fas.fa-circle
                                p 女

                    label E-mail
                        input(type="text")
                    label 聯絡電話
                        input(type="text")
                    label 修改密碼
                        input(type="password")
                    label 密碼確認
                        input(type="password")
                    label 地址
                        input(type="text")
                    label.ordernews
                        input(type="checkbox").checkbox
                        span.radiomark
                            i.fas.fa-check
                        p 訂閱電子報

                    input(type="submit" value="確認送出").btn_main

block page_js
    // ------------- page js ---------------
    script(type='text/javascript').

         // account_layout (for mobile)
        var account_nav = document.querySelector('.l_account_left').classList;
        var lastScrollY2 = 0;
        window.addEventListener('scroll', function(){
          // let lastScrollY = 0;
          let st = this.scrollY;
          var mediaWith = document.body.scrollWidth;
          if( st < lastScrollY2 && mediaWith < 768) {
            account_nav.add('l_account_nav_show');
          }else{
            account_nav.remove('l_account_nav_show');
          }
          lastScrollY2 = st;
        });
